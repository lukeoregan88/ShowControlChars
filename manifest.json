{
  "manifest_version": 3,
  "name": "Control Characters Viewer",
  "version": "1.0",
  "description": "Toggle visibility of control characters in text",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
